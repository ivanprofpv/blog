<% @post.comments.each do |comment| %>
  <div class="comments>
  <hr>
    <div class="card">
      <div class="card-body">
        <p class="mt-1">
          <%= comment.body %>
          <br>
          <%= comment.user.email %>
        </p>
        <br>
        <% if user_signed_in? %>
          <div class="small float-start pt-1">
            <%= link_to 'Edit comment', edit_post_comment_path(@post, comment), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Delete comment', post_comment_path(@post, comment), data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %>
          </div>
        <% end %>
      </div>
    </div>
  <br>
  <hr>
<% end %>
